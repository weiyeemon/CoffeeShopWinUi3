<UserControl
    x:Class="CoffeeShopWinUi3.Controls.HeaderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CoffeeShopWinUi3.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid Background="{StaticResource HearderBackgroundBrush }" >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Customer App" FontSize="30" VerticalAlignment="Center" Margin="5 0 0 5"
                       Foreground="{StaticResource HearderForegroundBrush}"/>
            <TextBlock Text="Version1.0" FontSize="16" VerticalAlignment="Bottom" Margin="10 0 0 5" 
                       Foreground="Black"/>
        </StackPanel>
    </Grid>
    
</UserControl>
